$(document).ready(function() {

  // open modal

  $('.thumb').on('click', function(e) {
    const id = e.target.id.split('-')[1];  // get id after dash
    $(`#modal-${id}`).css("display", "block"); // show corres modal

    $('body').addClass('modal-open'); // disabling scroll behind
    $('#work-container').addClass('blur'); // blurring bg
    $('#home-container').addClass('blur');
    $('#about-container').addClass('blur');
    setTimeout(function() {
        $(`#modal-${id}`).addClass('modal-color'); // fade in color
    }, 100);
  });


  // close modal

  $('.close').on('click', function(e) {
    const id = e.target.id.split('-')[1];  // get id after dash
    $(`#modal-${id}`).css("display", "none"); // hide corres modal
    $('body').removeClass('modal-open'); // reenable scroll
    $('#work-container').removeClass('blur'); // remove blur
    $('#home-container').removeClass('blur');
    $('#about-container').removeClass('blur');
    $(`#modal-${id}`).removeClass('modal-color'); // remove opaque color
  });



});
